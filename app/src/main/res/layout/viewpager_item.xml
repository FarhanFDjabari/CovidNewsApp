<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_gravity="center_vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/carouselCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_marginHorizontal="25dp"
        app:cardBackgroundColor="@color/yellow">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/carouselIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/total_positif_emoji"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="25dp"
                />

            <TextView
                android:id="@+id/carouselTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOTAL POSITIF"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"/>

            <TextView
                style="@style/collapsedTitleStyle"
                android:id="@+id/carouselData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="153,054,212"
                android:textColor="@color/black"
                android:textSize="36sp"
                android:layout_alignLeft="@+id/carouselTitle"
                android:layout_alignTop="@+id/carouselTitle"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/carouselSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ORANG"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_alignLeft="@+id/carouselTitle"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>