<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryVariant">@color/yellow</item>
        <item name="colorOnPrimary">@color/grey2</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bg</item>
        <item name="colorSecondaryVariant">@color/bg</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- Customize your theme here. -->
        <item name="snackbarStyle">@style/SnackbarStyle</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="Theme.CovidNewsApp.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor">?attr/colorSecondary</item>
    </style>

    <style name="Theme.CovidNewsApp.ColoredNoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.CovidNewsApp.Toolbar">
        <item name="android:textColorSecondary">@android:color/primary_text_dark</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="Theme.CovidNewsApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CovidNewsApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SnackbarStyle" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">66dp</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="ProgressStyle" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="ProgressDialogStyle" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:layout_width">wrap_content</item>
        <item name="dialogCornerRadius">10dp</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="collapsedTitleStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="expandedTitleStyle" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="BottomSheetDialogStyle"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_rounded_top</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/yellow</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="endIconTint">@color/white</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>

</resources>